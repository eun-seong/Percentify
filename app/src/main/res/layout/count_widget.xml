<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_theme0"
    android:padding="11dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/myWidget">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/range"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:layout_marginBottom="2dp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:text="월요일 - 일요일"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:autoSizeTextType="uniform"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:text="이번 주"/>
            </LinearLayout>
            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingStart="2dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="35sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeMinTextSize="23sp"
                android:text="28%"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/current"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="end"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="13sp"
                android:paddingBottom="1dp"
                android:paddingRight="2dp"
                android:text="화"/>

            <ProgressBar style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:max="100"
                android:progress="28"
                android:progressDrawable="@drawable/progressbar_theme"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton style="@style/imgbt"
            android:id="@+id/buttonUP"
            android:layout_marginBottom="5dp"
            android:background="@drawable/imgbt_up"
            />
        <ImageButton style="@style/imgbt"
            android:id="@+id/buttonDOWN"
            android:layout_marginTop="5dp"
            android:background="@drawable/imgbt_down"
            />
    </LinearLayout>
</LinearLayout>